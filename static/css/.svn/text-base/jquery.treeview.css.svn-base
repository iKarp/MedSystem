.treeview {
    font-family: Arial;
    font-size: 12px;
}

.treeview, .treeview ul { 
	padding: 0;
	margin: 0;
	list-style: none;
}

.treeview ul {
/*	background-color: white;*/
	margin-top: 4px;
}

.treeview .hitarea {
	background: url(/static/price/img/treeview-default.gif) -64px -25px no-repeat;
	height: 16px;
	width: 16px;
	margin-left: -16px;
	float: left;
	cursor: pointer;
}

.treeview a {
    background: none;
    color : black;
}
/* fix for IE6 */
* html .hitarea {
	display: inline;
	float:none;
}

.treeview li { 
	margin: 0;
	padding: 3px 0pt 3px 16px;
}

/*.treeview a.selected {
	background-color: #eee;
}*/

#treecontrol { margin: 1em 0; display: none; }

.treeview .hover { color: red; cursor: pointer; }

.treeview li { background: url(/static/price/img/treeview-default-line.gif) 0 0 no-repeat; }
.treeview li.collapsable, .treeview li.expandable { background-position: 0 -176px; }

.treeview .expandable-hitarea { background-position: -80px -3px; }

.treeview li.last { background-position: 0 -1766px }
.treeview li.lastCollapsable, .treeview li.lastExpandable { background-image: url(/static/price/img/treeview-default.gif); }  
.treeview li.lastCollapsable { background-position: 0 -111px }
.treeview li.lastExpandable { background-position: -32px -67px }

.treeview div.lastCollapsable-hitarea, .treeview div.lastExpandable-hitarea { background-position: 0; }

.treeview-red li { background-image: url(/static/price/img/treeview-red-line.gif); }
.treeview-red .hitarea, .treeview-red li.lastCollapsable, .treeview-red li.lastExpandable { background-image: url(/static/price/img/treeview-red.gif); } 

.treeview-black li { background-image: url(/static/price/img/treeview-black-line.gif); }
.treeview-black .hitarea, .treeview-black li.lastCollapsable, .treeview-black li.lastExpandable { background-image: url(/static/price/img/treeview-black.gif); }  

.treeview-gray li { background-image: url(/static/price/img/treeview-gray-line.gif); }
.treeview-gray .hitarea, .treeview-gray li.lastCollapsable, .treeview-gray li.lastExpandable { background-image: url(/static/price/img/treeview-gray.gif); } 

.treeview-famfamfam li { background-image: url(/static/price/img/treeview-famfamfam-line.gif); }
.treeview-famfamfam .hitarea, .treeview-famfamfam li.lastCollapsable, .treeview-famfamfam li.lastExpandable { background-image: url(/static/price/img/treeview-famfamfam.gif); } 


.filetree li { padding: 3px 0 2px 16px; }
.treeview span.folder, .treeview span.file { padding: 1px 0 1px 16px; display: block; }

/* FOR DRAG */
.is_upper {border: 2px red solid;}

.treeview span.folder { background: url(/static/price/img/folder.gif) 0 0 no-repeat; }
.treeview li.expandable span.folder { background: url(/static/price/img/folder-closed.gif) 0 0 no-repeat; }
.treeview span.file { background: url(/static/price/img/file.gif) 0 0 no-repeat; }

/* NOT ACTIVE ITEM */
.treeview span.not_active {
    text-decoration: line-through;
}


/* MENU */
div.dir_context_menu,div.file_context_menu {
    background-color:#d7ebf9;
    border:1px #8D8D8D solid;
    height:auto;
    padding:5px;
    position:absolute;
    width:145px;
    display: none;
    font-size: 12px;
    font-family: 'Arial';
}

div.dir_context_menu a,div.file_context_menu a {
	color: black;
/*	font-family: 'Arial';
	font-size:12px;*/
}

div.dir_context_menu span,div.file_context_menu span {
    display: inline-block;
    
}