
html {
	height: 100%;
	margin: 0px;
	padding: 0px;
}
body {
	margin: 0px;
	font-size:16px;
	padding: 0px;
	height:100%; 
 	   
}
h1 {
	color: gray;
}
msg {
	color: red;
	font-size: 14px;
    font-weight: bold;
}

/* Main */
.footer {
    width: 95%;
    margin-top: 0px;
    position: relative;
    padding: 0px;
    font-family: Tahoma,Georgia,Arial;
    clear: both;
    bottom:0;
}
.reporting {
    float: left;
    height: 1.5em;
    min-width: 600px;
    width: auto !important;
    width: 600px;
    text-align: center;
}
.copyright {
    float:right;
    height:1.5em;
    width:150px;
    text-align: right;
    padding-right: 5px;
	font-size: 11px;
}
.content {
	padding-left: 10px;
	padding-right: 10px;
	padding-top: 6px;
	padding-bottom: 6px;
	margin-left: 180px;
	margin-right: 5px;
	font-size: 12px;
    font-family: Arial, Tahoma;
	min-height: 580px;
}

/* Menu Bar */
.menu-bar {
    height:24px;
	margin:0;
    background: #D7EBF9 url('../images/bg_highlight.png') repeat-x 50% 50%;
	border:1px solid #AED0EA;
}
.left-menu {
	margin-left: 5px;
	width: 160px;
	padding-left: 2px;
	padding-right: 2px;
	padding-top:2px;
	padding-bottom: 2px;
	float: left;
}

table.tabs{
	margin-bottom: -4px;
}
table.tabs td{
	width: 100px;
	height: 30px;
	border: 2px solid #DDDDDD;
	border-radius: 6px 6px 0px 0px;
	text-align: center;
	cursor: pointer;
	background-color: #F2F5F7;
}
fieldset{
	border: 2px solid #DDDDDD;
	border-radius: 6px 6px 6px 6px;
}

/* Buttons */
.left-menu-button {
	width: 156px;
	margin: 2px;
	height: 30px;
}
.button {
	width: 150px;
	margin: 2px;
	height: 30px;
	margin-top: 14px;
}
button.selected{
	background: url("images/ui-bg_glass_80_d7ebf9_1x400.png") repeat-x scroll 50% 50% #D7EBF9;
}
.small-button{
	border:2px solid #DDDDDD;
	padding-right: 1px;
	padding-bottom: 1px;
}

/* Items */
.i-label{
	width: 200px;
	text-align: left;
	font-size: 13px;
    font-weight: bold;
	padding-left: 10px;
	float: left;
}
.i-label-short{
	width: 120px;
	text-align: left;
	font-size: 13px;
    font-weight: bold;
	padding-left: 10px;
	float: left;
}
.i-cont{
	text-align: left;
	font-size: 13px;
	margin-bottom: 3px;
	height: 20px;
}
.item{
	width: 200px;
}
.long-item{
	width: 300px;
}
.loading {
    width: 16px;
    height: 16px;
    display: inline-block;
    margin-left: 5px;
    background: url("/static/img/loader.gif") no-repeat scroll center;
}

/* Userreg template */
.userreg-main {
    margin: 0 auto;
    height: auto;
}
.userreg-main-content {
    margin: auto;
	padding-left: 5px;
	width: 800px !important;
	/* min-height: 50em; */
}
.userreg-search-form {

}
.userreg-button {
	padding-left:100px;
	font-size:0.9em;
}
.userreg-left-lable {
	float: left;
	width: 250px;
}
.userreg-center-lable {
    margin: 2px 0;
    padding-left: 150px;
}
.userreg-center-lable input,select {
	width: 150px;
}
.userreg-title {
	padding: 1px 0;
}
.userreg-editform {
	padding: 0 10px;
	min-width: 300px;
}
.userreg-message-successful {
	padding: 5px;
	font-size: 14px;
	color: #008000;
}
.userreg-message-unsuccessful {
	padding: 5px;
	font-size: 14px;
	color: #FF4A4A;
}

.tbl-left-col{
	width: 150px;
	text-align: left;
	font-size: 13px;
    font-weight: bold;
	padding-left: 10px;
}
.tbl-right-col{
	text-align: left;
	font-size: 13px;
    
}

table th {   
    text-align: left;
    border-bottom: 2px #5B5B5B solid ;
	font-size:12px;
}
table tfoot td {   
    text-align: left;
    border-top: 2px #5B5B5B solid ;
	font-size:12px;
}
table.result tr:nth-child(even){
	background-color: #ffffff;
}
table.result tr {
	cursor: pointer;
	font-size:12px;
}
table.light tr {
	font-size:12px;
}
table.light tr:nth-child(even){
	background-color: #ffffff;
}
table.result-total tr:last-child{
	border-top: 2px #5B5B5B solid ;
	font-size:14px;
	font-weight: bold;
}
table.view-1 tr:nth-child(even){
	background-color: #D7EBF9;
}


.d-main-header {
	height: 30px;
	padding-left: 4px;
	margin-left: 5px;
	margin-right: 5px;
	margin-top: 4px;
	margin-bottom: 4px;
}
.d-main-header-title {
	float: left;
	margin-left: 5px;
	margin-top: 5px;
}
.d-main-header-exit {
	font-size: 12px;
	text-align: right;
	margin-top: 3px;
	margin-right: 3px;
}
.d-container {
	/*width: 100%;
	height: 100%;*/
}
.tab-left{
	margin-left: 20px;
	padding-left: 20px;
}


/* HEADER */
.d-main-header {
	height: 30px;
    margin: 4px 5px;
	padding-left: 4px;
}
.d-main-header-title {
	float: left;
    margin: 5px 0 0 5px;
}

.d-main-header-exit {
	font-size: 12px;
	text-align: right;
	margin-top: 3px;
	margin-right: 3px;
}

.ui-widget {font-size: 12px;} /* FOR font size in toolbar */

/* CONTENT */
#content_wrap {margin: 0 0 0 5px;}
#templates {display: none;}

.stdform fieldset {border: none;}
.stdform label{display: block; margin: 0 0 5px 0;}
.stdform label span{width: 120px; display: inline-block;}
.stdform label input {width: 200px;}