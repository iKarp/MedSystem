#header h3 {
	float: left;
	margin: 0;
}

#header div.menu {
	float: right;
}

#header {
	width: 100%;
	height: 30px;
}

#treeview {
    width: 450px;
    float : left;
    padding:10px;
}

h4 {
    font-family:Arial;
    font-size:16px;
    margin:0;
    margin-bottom: 25px;
    padding:0;
}

div.dir_context_menu,div.file_context_menu {
    background-color:#d7ebf9;
    border:1px #8D8D8D solid;
    height:auto;
    padding:5px;
    position:absolute;
    width:145px;
    display: none;
    font-size: 12px;
    font-family: 'Arial';
}

div.dir_context_menu a,div.file_context_menu a {
	color: black;
/*	font-family: 'Arial';
	font-size:12px;*/
}

div.dir_context_menu span,div.file_context_menu span {
    display: inline-block;
    
}

.edit_price {
    float: left;
    margin-left:20px;
    padding:10px;
}

.edit_price fieldset {
    border: none;
}

.edit_price label {
    display: block;
    float: left;
    width: 100px;
    margin-bottom: 5px;   
}

.edit_price input {
    margin-bottom: 5px;
}

.edit_price input[name=name] {
    width: 400px;
}

.loadimg {
    width: 16px;
    height: 16px;
    display: inline-block;
    margin-left: 5px;
    background: url("/static/img/loader.gif") no-repeat scroll center;
}

#loadimg {
	display: inline-block;
}

.ok {
    background-image : url("/static/css/cupertino/images/ui-icons_3d80b3_256x240.png");
    background-position: -208px -192px;
    height:16px;
	width:16px;
}

.err {
    background-image : url("/static/css/cupertino/images/ui-icons_3d80b3_256x240.png");
    background-position: -32px -192px;
    height:16px;
	width:16px;
}

.formhide {
	background:url("images/ui-bg_highlight-hard_100_f2f5f7_1x100.png") repeat-x scroll 50% bottom #F2F5F7;
	height:200px;
	position:absolute;
	width:520px;
	z-index:1;
	text-align:center;
}


/* FOR NOT ACTIVE ITEMS */
.not_active {
    text-decoration: line-through;
}

/* jQuery owerwrite */
.ui-widget {
    font-size: 12px;
}

#dialog label {
    display:block;
    float:left;
    width:50px;
}

#dialog input {
    margin-bottom:5px;
}



/* USER SECTION */
.list_prices {
    float: left;
    margin-left:20px;
    padding:10px;
    width: 500px;
}

#treeview span{
    display: inline;
}


.listtbl th{
    text-align:left;
}

#templates {display: none;}

table.tree {font-size: 13px; width: 800px;}
table.tree tr.sum{font-weight: bold;}

table.tree .l-0 {font-weight: bold; font-size: 15px;}
table.tree .l-1 {padding: 0 0 0 20px; font-size: 14px; font-weight: bold; color: green;}
table.tree .l-2 {padding: 0 0 0 40px;}
table.tree .l-3 {padding: 0 0 0 60px;}
table.tree .l-4 {padding: 0 0 0 80px;}
table.tree .l-5 {padding: 0 0 0 100px;}

table.tree th {font-size: 16px; text-align: left;}
span.saveinfo {font-weight: bold; display: none;}
input.save {height: 40px; margin: 10px 5px 0 0; width: 200px;}
